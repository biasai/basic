<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/crown_progress"
        android:layout_width="@dimen/x637"
        android:layout_height="@dimen/y200"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="@dimen/x35"
        android:visibility="invisible"
        android:gravity="center">

        <cn.android.support.v7.lib.sin.crown.kotlin.widget.NumberProgressBar
            android:id="@+id/numprogressbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y36" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/crown_update"
        android:layout_width="@dimen/x637"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/crown_drawable_alert"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="@dimen/x35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="@dimen/x38"
            android:text="版本更新"
            android:textColor="#111111"
            android:textSize="@dimen/x32" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y4"
            android:layout_marginTop="@dimen/x35"
            android:background="@drawable/crown_line_dash"
            android:layerType="software" />

        <TextView
            android:id="@+id/crown_txt_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x35"
            android:gravity="end"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="@dimen/x38"
            android:text="发现新版本：1.0.0.1"
            android:textColor="#444444"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/crown_txt_version_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x35"
            android:gravity="end"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="@dimen/x38"
            android:text="更新内容我就不告诉你了-。-。。"
            android:textColor="#444444"
            android:textSize="@dimen/x32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_marginTop="@dimen/x35"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crown_txt_cancel"
                android:layout_width="@dimen/x100"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="@dimen/x38"
                android:text="取消"
                android:textColor="#111111"
                android:textSize="@dimen/x32" />

            <TextView
                android:id="@+id/crown_txt_ok"
                android:layout_width="@dimen/x100"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x35"
                android:gravity="center|bottom"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="@dimen/x38"
                android:text="更新"
                android:textColor="#fb605a"
                android:textSize="@dimen/x32" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
