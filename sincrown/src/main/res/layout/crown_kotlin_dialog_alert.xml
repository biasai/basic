<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/crown_alert_parent"
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/x300"
        android:background="@drawable/crown_drawable_alert"
        android:clickable="true">

        <TextView
            android:id="@+id/crown_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/x24"
            android:text="标题"
            android:textColor="#242424"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/crown_txt_mession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x26"
            android:text="内容"
            android:textColor="#242424"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/crown_txt_Negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/crown_txt_Positive"
            android:clickable="true"
            android:padding="@dimen/x24"
            android:text="取消"
            android:textColor="#239F93"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/crown_txt_Positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="@dimen/x24"
            android:text="确定"
            android:textColor="#239F93"
            android:textSize="@dimen/x26" />

    </RelativeLayout>


</LinearLayout>
